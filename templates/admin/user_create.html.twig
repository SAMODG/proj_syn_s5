{% extends 'base.html.twig' %}

{% block title %}Créer un Compte Utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h1>Créer un Compte Utilisateur</h1>

        <!-- Information sur le client existant -->
        {% if client is defined %}
            <p><strong>Client :</strong> {{ client.surname }} | <strong>Téléphone :</strong> {{ client.telephone }}</p>
        {% endif %}

        <!-- Formulaire -->
        {{ form_start(form) }}

            {{ form_row(form.email, {'label': 'Adresse Email'}) }}
            {{ form_row(form.password, {'label': 'Mot de passe'}) }}
            {{ form_row(form.roles, {'label': 'Rôle'}) }}
            {{ form_row(form.isActive, {'label': 'Actif'}) }}

            <button type="submit" class="btn btn-primary">Créer</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
