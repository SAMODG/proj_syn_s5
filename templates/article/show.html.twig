{% extends 'base.html.twig' %}

{% block title %}Détails de l'Article{% endblock %}

{% block body %}
<h1>Détails de l'Article</h1>

<p><strong>Nom :</strong> {{ article.nom }}</p>
<p><strong>Quantité en Stock :</strong> {{ article.qteStock }}</p>

<a href="{{ path('article_index') }}" class="btn btn-secondary">Retour à la liste</a>
<a href="{{ path('article_edit', { id: article.id }) }}" class="btn btn-primary">Modifier</a>
{% endblock %}
